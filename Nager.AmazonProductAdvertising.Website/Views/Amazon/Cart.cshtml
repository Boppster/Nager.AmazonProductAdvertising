@model Nager.AmazonProductAdvertising.Model.Cart
@{
    ViewBag.Title = $"{Model?.CartId} {Model?.SubTotal.FormattedPrice}";
}
@if (Model != null)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    <h3>@Model.CartId <small>@Model.SubTotal.FormattedPrice</small></h3>
                </div>
            </div>
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <th>ASIN</th>
                    <th>Title</th>
                    <th>ProductGroup</th>
                    <th>SellerNickname</th>
                    <th>Quantity</th>
                    <th class="text-right" width="100">Price</th>

                </tr>
                @foreach (var item in Model?.CartItems.CartItem)
                {
                <tr>
                    <td>@item.CartItemId</td>
                    <td>@item.ASIN</td>
                    <td>@item.Title</td>
                    <td>@item.ProductGroup</td>
                    <td>@item.SellerNickname</td>
                    <td>@item.Quantity</td>
                    <td class="text-right">@item.Price.FormattedPrice</td>
                </tr>
                }
                <tr>
                    <td colspan="6"></td>
                    <td class="text-right"><strong>@Model.SubTotal.FormattedPrice</strong></td>
                </tr>
            </table>

            <a class="btn btn-default" href="@Model.PurchaseURL">Go to Amazon</a>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xs-12">
            <h1>Card is empty</h1>
            Please add an article first
        </div>
    </div>
}
