@model Nager.AmazonProductAdvertising.Model.Paapi.Item
<div class="col-xs-12 col-sm-6 col-md-3 shoparticle">
    <div class="row">
        <div class="col-xs-12">
            <a href="/Amazon/Detail?articleNumber=@Model.ASIN">
                <div class="overlay"><div class="text">Product Detail</div></div>
                    @if (Model.Images?.Primary?.Medium != null)
                    {
                        <img src="@Model.Images.Primary.Medium.URL" alt="@Model.ItemInfo.Title.DisplayValue" title="@Model.ItemInfo.Title.DisplayValue" border="0" />        
                    }
                    else
                    {
                        <img src="http://via.placeholder.com/250x150/ffffff/000000/?text=No+Image+available" alt="no image available" title="no image available" />
                    }
                </div>
            </a>
        <div class="col-xs-12">
            <a href="/Amazon/Detail?articleNumber=@Model.ASIN">
                <h5>@if (Model.ItemInfo.Title.DisplayValue.Length > 70) { @Model.ItemInfo.Title.DisplayValue.Substring(0, 70)<text>...</text> } else { @Model.ItemInfo.Title.DisplayValue }</h5>
            </a>
            <div class="price">@(Model.Offers?.Listings?.FirstOrDefault()?.Price?.DisplayAmount)</div>            
        </div>
    </div>
    <div class="hidden-sm hidden-md hidden-lg"><hr /></div>
</div>